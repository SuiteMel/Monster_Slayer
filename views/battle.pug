doctype html
html
  head
    title Monster Slayer
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"> 
    <link href="https://fonts.googleapis.com/css?family=Nosifer" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="../assets/css/battle.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="../assets/js/battle.js"></script>
    
    
  body
    .container-fluid
      div(class="row" id="health_bars")
        div(class="col-lg-4 col-sm-4")
          div(class="progress m-2 text-center")
            div(class="progress-bar progress-bar-striped bg-success" id="player_health" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100")

          h1#health_player
        div(class="col-lg-4 col-sm-4")
          h1#round_num
        div(class="col-lg-4 col-sm-4")
          div(class="progress m-2 text-center")
            div(class="progress-bar progress-bar-striped bg-success" id="player_health" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100")

          h1#health_monster

      div(class="row")
        div(class="col-lg-4 col-sm-4 text-center" id="player_space")
          -var i = 1
            h2= player[i].name
            img.image(src='./assets/images/' + player[i].image)

        div(class="col-lg-4 col-sm-4 text-center" id="summary_space")
          button#attack.btn Attack!!
          h2 Round Info
          #round_info

        div(class="col-lg-4 col-sm-4 text-center" id="monster_space")
          -var j = 0
            h2= player[j].name
            img.image(src='./assets/images/' + player[j].image)

        div#win-loss-modal.modal.fade.rounded(tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")
          div.modal-dialog.modal-dialog-centered.border-none(role="document")
            div.modal-content.m-auto.border-none
              div.modal-header.text-center.border-0
                h3.modal-title.text-center.m-auto Battle Result!
              div.modal-body.text-center.border-0 
                strong
                  h3 You have 
                    span#win-loss-msg
              div.modal-footer.text-center.border-0
                button#win-loss-btn.btn-lg.m-auto(type="button") 
                  a(href="/") Quit

      footer.text-center
        h4(class="my-5 text-center") Monster Slayer
        